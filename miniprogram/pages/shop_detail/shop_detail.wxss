/* pages/shop_detail/shop_detail.wxss */
/* 轮播图*/
.swiper_container{
  height: 150px;
}
.swiper_item{
  height: 100%;
  line-height: 150px;
}
/* 商品价格 */
.goods_price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;

}
.goods_name{
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
}
/* 底部标签栏 */
.btm_tool{
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; 
  font-size: 20rpx;
  position: relative;
}
.tool_item_btn_buy{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.tool_item_btn_cart{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}